<% @yogies.each do |yogy| %>
  <div class="jumbotron">
    <h2><%= link_to "##{yogy[:title]}", yogy_path(yogy[:title]) %><% if yogy[:count].to_i > 1 %><sup><span class="badge"><%= yogy[:count].to_i %></span></sup><% end %>
        <small><%= yogy[:images].first.title %></small>
    </h2>
<a href="<%= image_path( yogy[:images].first ) %>">
    <p><%= responsive_image_tag( yogy[:images].first, class: "yogy_img title" ) %></p>
</a>
    <h4 class="text-right"><%= yogy[:images].first.user.name %> <small><%= yogy[:images].first.created_at %></small></h4>
    <p style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><small><small><%= yogy[:images].first.desc %></small></small></p>
<% if yogy[:images].size > 1 %>
    <br />
    <hr />
    <br />
<% end %>
<div class="row">
  <% yogy[:images].drop(1).each do |image| %>
    <a href="<%= image_path( image ) %>">
      <div class="yogy_img_cols">
          <%= responsive_image_tag(image, class: "yogy_img subtitle") %>
      </div>
    </a>
  <% end %>
</div>
    <% if yogy[:count].to_i > yogy[:images].count %>
      :<br/>
      :<br/>
    <% end %>
  </div>

<% end %>

<%= render "layouts/footer" %>

<script>
  yogy_index();
</script>
