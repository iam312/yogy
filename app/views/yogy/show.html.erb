<div class="panel panel-default">
  <div class="panel-body">
    <h3><%= @yogies.first.title %>
    <small>
    <% @extra[:seasons].each do |season| %>
      <%= link_season( season ) %>
    <% end %> | 
    <% @extra[:years].each do |year| %>
      <%= link_year( year ) %>
    <% end %>
    </small>
    </h3>
  </div>
</div>

<div class="row">
<% @yogies.each do |yogy| %>
  <div class="col-xs-6 col-md-3">
    <div class="panel">
      <a href="<%= image_path( yogy.image ) %>">
      <%= responsive_image_tag(yogy.image, class: "yogy_img xsmall") %>
      </a>
    </div>
  </div>
<% end %>
</div>
