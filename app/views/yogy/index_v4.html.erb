<style>
.col-margin {
  margin-bottom: 30px;
}

.bg {
    position: absolute;
    left: 15px;
    width: calc(100% - 30px);
}

.bg.top {
    top: 0%;
    background-image: linear-gradient(
      to bottom, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.0)
    );
}

.bg.bottom {
    bottom: 0%;
    background-image: linear-gradient(
      to top, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.0)
    );
}

.bg.top .caption {
  color: white;
  padding-right: 15px;
  padding-top: 5px;
  padding-bottom: 15px;
}

.bg.bottom .caption {
  color: white;
  padding-right: 15px;
  padding-top: 15px;
  padding-bottom: 5px;
}
</style>

<div class="row">
<% @yogies.each do |yogy| %>
  <% extra = Yogies.extra_by_images( yogy[:images] ) %>
  <% yogy_image = yogy[:images].shuffle.first %>
  <div class="col-md-6 col-lg-6 col-margin">
    <a href="<%= image_path( yogy_image ) %>">
      <%= responsive_image_tag( yogy_image, class: "yogy_img title img-responsive" ) %>
    </a>
    <div class="bg top">
      <div class="caption text-right">
        <h6>
        <%= link_to yogy_image.user.name, image_filter_by_user_path( yogy_image.user_id ) %>님이 <%= link_to "##{yogy[:title]}", image_path(yogy_image.id) %>에서 찍은 사진입니다
        </h6>
      </div>
    </div>
    <div class="bg bottom">
      <div class="caption text-right">
        <h6>
          <% if yogy[:count].to_i > 1 %>
          <% extra[:seasons].each do |season| %>
            <%= link_season_with_yogy( season, yogy[:title] ) %>
          <% end %>,
          <% extra[:years].each do |year| %>
            <%= link_year_with_yogy( year, yogy[:title] ) %>
          <% end %>
          에 찍은 <%= yogy[:title] %> 사진이 <%= link_to "#{yogy[:count].to_i - 1}장 더 있습니다", yogy_path(yogy[:title]) %>.
          <% end %>
        </h6>
      </div>
    </div>
  </div>
<% end %>
</div>

<%= render "layouts/footer" %>
