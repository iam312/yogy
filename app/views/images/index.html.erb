<div class="row">
<% @images.each do |image| %>
  <% next if image.asset.blank? %>
  <a href="<%= image_path( image ) %>">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= image_tag(image.asset.url) %>
        <div class="caption">
          <h3><%= image.title %></h3>
          <small><%= image.created_at %></small>
          <p><%= image.desc %></p>
        </div>
      </div>
    </div>
  </a>
<% end %>
</div>
